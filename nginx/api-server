server {
    server_name HOST_NAME_OR_IP;

    root /PATH_TO_APP/app_server/assets;
    index index.html;

    location /payment {
        try_files $uri /index.html;
    }

    location /api {
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_pass http://HOST_NAME_OR_IP:8000/api;
    }

    location /attachments {
        alias /PATH_TO_APP/app_server/assets/dist/attachments;
    }

    error_page 404 /index.html;
}
